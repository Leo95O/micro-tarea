<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Si el archivo o carpeta existe real (ej: una imagen, styles.css), s√≠rvelo.
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Si no existe, redirige todo al index.html (Angular)
    RewriteRule ^ index.html [L]
</IfModule>