{
    "name": "empresa/micro-back",
    "description": "API Backend Legacy (PHP 7.1 + Slim 2.6)",
    "require": {
        "php": ">=7.1.3",
        "slim/slim": "2.*",
        "firebase/php-jwt": "^5.0",
        "monolog/monolog": "^1.25",
        "vlucas/phpdotenv": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "api/",
            "Config\\": "config/",
            "Core\\": "core/",
            "Middleware\\": "middleware/"
        }
    },
    "config": {
        "optimize-autoloader": true
    }
}